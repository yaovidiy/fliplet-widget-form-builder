<div class="form-group clearfix">
  <div class="checkbox checkbox-icon">
    <input type="checkbox" id="show_submit" v-model="showSubmit">
    <label for="show_submit">
      <span class="check"><i class="fa fa-check"></i></span> Show submit button
    </label>
  </div>
</div>

<div class="form-group">
  <label>Submit button label</label>
  <input class="form-control" type="text" v-model.trim="submitValue" placeholder="Submit button label" />
</div>

<div class="form-group clearfix">
  <div class="checkbox checkbox-icon">
    <input type="checkbox" id="show_clear" v-model="showClear">
    <label for="show_clear">
      <span class="check"><i class="fa fa-check"></i></span> Show clear button
    </label>
    <p class="help-block">The clear button will reset all fields to their defaults.</p>
  </div>
</div>

<div class="form-group">
  <label>Clear button label</label>
  <input class="form-control" type="text" v-model.trim="clearValue" placeholder="Clear button label" />
</div>
